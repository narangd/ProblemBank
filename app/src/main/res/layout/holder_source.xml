<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    app:contentPadding="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/source_preview"
            android:padding="8dp"
            android:textSize="12sp"
            android:text="a;osdif2h38fufaliueiuhfliaweiuh\nihwefu"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/material_bluegrey800"
            android:alpha="0.7"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/source_title"
                android:textColor="@color/android_default_background"
                android:padding="16dp"
                android:text="Tile"
                style="@android:style/TextAppearance.Material.Display1"/>

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>